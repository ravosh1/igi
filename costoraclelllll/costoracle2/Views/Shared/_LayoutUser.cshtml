@{
    string userid = "", name = "";
    HttpCookie loginCookie_Costoracle_USER = Request.Cookies["loginCookie_Costoracle_USER"];
    if (loginCookie_Costoracle_USER != null)
    {
        userid = loginCookie_Costoracle_USER["UserId"];
        name = loginCookie_Costoracle_USER["Name"];
    }
}

