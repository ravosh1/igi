@model AMSS.Models.Property
@using System.Data;

@{
    ViewBag.Title = "Marks";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    DataSet ds = (DataSet)ViewBag.Question;
    DataTable dt = new DataTable();
    if (ds != null && ds.Tables[0].Rows.Count > 0)
    {
        dt = ds.Tables[0];
    }
}


<div class="contentwrapper">
    @if (TempData.Count > 0)
    {
        if (TempData["successmsg"] != null)
        {
            <div class="alert alert-success fade in">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <i class="fa fa-check alert-icon"></i><strong>Well done!</strong> @TempData["successmsg"]
            </div>
        }
        else if (TempData["failmsg"] != null)
        {
            <div class="alert alert-danger fade in">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <i class="glyphicon glyphicon-ban-circle alert-icon"></i>@TempData["failmsg"]
            </div>
        }
    }
    <div class="heading">
        <h3>Student Marks</h3>
        <div class="resBtnSearch"><a href="#"><span class="s16 icomoon-icon-search-3"></span></a></div>
    </div>
    <div class="row">
        <div class="col-md-12 sortable-layout">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Add Marks</h4>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal group-border stripped" action="@Url.Action("Markss","Student")" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="col-md-12 control-label text-left">Student<span class="Red">*</span></label>
                                        <div class="col-md-12 ">
                                            @Html.DropDownListFor(model => model.studentid, ViewBag.Studentlist as SelectList, new { @class = "form-control", @required = "required" })
                                       
                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <label class="col-md-12 control-label text-left">Assignment<span class="Red">*</span></label>
                                        <div class="col-md-12 ">
                                            @Html.DropDownListFor(model => model.assignmentID, ViewBag.assignmentlist as SelectList, new { @class = "form-control", @required = "required" })

                                        </div>

                                    </div>
                               
                              
                                    <div class="col-md-3">
                                        <button type="submit" id="btnsmt" class="btn btn-success mb-10 ml10" style="margin-top: 21px;">Get Question</button>
                                        <a href="@Url.Action("Dashboard", "Portal")" class="btn btn-primary mr5 " style="margin-top: 21px;">Back</a>
                                    </div>
                                </div>
                            </div>


                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Question List</h4>
                </div>
                <div class="panel-body">

                    @if (dt.Rows.Count > 0)
                    {
                        <table id="" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>

                                    <th>Question Name</th>
                                    <th>Full Marks</th>

                                    <th>Marks Obtained</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (System.Data.DataRow dr in dt.Rows)
                                {
                                    <tr>


                                        <td>
                                            @dr["Question"]

                                        </td>
                                        <td>
                                            @dr["maxmark"]

                                        </td>


                                        <td>
                                           @for(int i = 0; i <= Convert.ToInt32(@dr["maxmark"]); i++)
                                           {
                                               //@i;
                                               <input type="text" readonly style="width:50px;padding: 0px 10px;margin:5px;font-size:24px;" class="btn btn-success" value="@i"/>
                                               @*<button style="padding: 0px 10px;margin:5px;font-size:24px;" class="btn btn-success"><b>@i</b></button>*@
                                           }

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                        <div class="col-lg-12" style="margin-top: 10px;">
                            <h4 class="panel-title alert alert-info fade in" style="color: #F10404; text-align: center;">No result found.</h4>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

</div>

