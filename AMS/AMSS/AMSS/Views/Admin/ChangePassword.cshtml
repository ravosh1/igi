@model AMSS.Models.Property
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="contentwrapper">
    <!--Content wrapper-->

    <div class="heading">
        <h3>Change Password</h3>
        <div class="resBtnSearch">
            <a href="#"><span class="s16 icomoon-icon-search-3"></span></a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty((string)ViewBag.error))
                {
                    <p class="errormsg">@ViewBag.error</p>
                }
                else if (!string.IsNullOrEmpty((string)ViewBag.success))
                {
                    <p class="successmsg">@ViewBag.success</p>
                }
            </div>
            <div class="panel panel-default toggle panelMove panelClose panelRefresh">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title">Change Password</h4>
                </div>
                <div class="panel-body pt0 pb0">
                    <form class="form-horizontal group-border stripped" method="post" enctype="multipart/form-data">
                        @if (!string.IsNullOrEmpty(@ViewBag.error))
                        {
                            <div class="alert alert-danger fade in">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="glyphicon glyphicon-ban-circle alert-icon"></i><strong>Oh snap!</strong><br />
                                @ViewBag.error
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(@ViewBag.success))
                        {
                            <div class="alert alert-success fade in">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-check alert-icon"></i>
                                <strong>Well done!</strong>  @ViewBag.success
                            </div>
                        }

                        <div class="form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Old Password" })
                                <span class="help-inline" style="color: #F10D0D;">
                                    @Html.ValidationMessageFor(model => model.Password)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                                <span class="help-inline" style="color: #F10D0D;">
                                    @Html.ValidationMessageFor(model => model.NewPassword)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                @Html.PasswordFor(model => model.ConfPassword, new { @class = "form-control", @placeholder = "Retype Password" })
                                <span class="help-inline" style="color: #F10D0D;">
                                    @Html.ValidationMessageFor(model => model.ConfPassword)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6">
                                <a href="@Url.Action("Dashboard", "Portal")" class="btn btn-default pull-right">Cancel</a>
                                    <button type="submit" class="btn btn-default pull-right">Change Password</button>
                            </div>
                            <br />
                            <br />

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- col-lg-12 end here -->

</div>
