@model Downline_Building_Club.Models.AdminModels.Contact_Info
@{
    ViewBag.Title = "contact Info";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="contentwrapper">
    <!--Content wrapper-->

    <div class="heading">
        <h3>Contact Information</h3>
        <div class="resBtnSearch">
            <a href="#"><span class="s16 icomoon-icon-search-3"></span></a>
        </div>
    </div>

    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">

            <div class="panel panel-default">
                @if (!string.IsNullOrEmpty((string)ViewBag.error))
                {
                    <div class="alert alert-danger fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <i class="glyphicon glyphicon-ban-circle alert-icon"></i>
                        @ViewBag.error
                    </div>
                }
                @if (!string.IsNullOrEmpty((string)TempData["Success"]))
                {
                    <div class="alert alert-success fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <i class="fa fa-check alert-icon"></i>
                        <strong>Success!</strong> @TempData["Success"]
                    </div>
                }
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title">Contact Info</h4>
                </div>
                <div class="panel-body pt0 pb0">
                    <form class="form-horizontal group-border stripped" method="post" enctype="multipart/form-data">

                        @Html.HiddenFor(model => model.ContactId)
                        
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Address <span style="color:red">*</span></label>
                            <div class="col-lg-10 col-md-10">
                                @Html.TextAreaFor(model => model.Address, new { @rows="6", @class = "form-control", @placeholder = "Enter Address", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Address)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Email <span style="color:red">*</span></label>
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Email, new {@type="email", @class = "form-control", @placeholder = "Enter Email", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Email)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Phone <span style="color:red">*</span></label>
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Enter Phone", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Phone)</span>
                            </div>
                        </div>
                        
                        
                       
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Zip</label>
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Zip, new { @class = "form-control", @placeholder = "Enter Zip", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Zip)</span>
                            </div>
                        </div>
                        
                            <div class="form-group">
                            <label class="col-lg-2 col-md-3 control-label">Map</label>
                            <div class="col-lg-10 col-md-10">
                                @Html.TextAreaFor(model => model.Map, new { @rows="6", @class = "form-control", @placeholder = "Enter Map", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Map)</span>
                            </div>
                        </div>
                      
                         

                        <div class="form-group">
                            <div class="col-lg-12 col-md-12">

                                <a href="@Url.Action("Dashboard", "portal")" style="float: right;" class="btn btn-primary mr5 mb10">Cancel</a>
                                <button type="submit" style="float: right;" class="btn btn-success mr5 mb10">Submit</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- End .panel -->



        </div>
        <!-- col-lg-12 end here -->

    </div>



</div>


