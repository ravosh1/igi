@using System.Data
@{
    ViewBag.Title = "Subscriber";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    Pager PModel = (Pager)ViewBag.PageNoList;

    long TotalPage = (long)ViewBag.TotalPage;
    long CurrPage = (long)ViewBag.CurrentPage;
    DataSet ds = (DataSet)ViewBag.SubscribeListDb;
    DataTable dt = new DataTable();
    if (ds != null && ds.Tables[0].Rows.Count > 0)
    {
        dt = ds.Tables[0];
    }
}

<div class="contentwrapper">
    <!--Content wrapper-->
    <div class="heading">
        <!--  .heading-->
        <h3>Subscriber List</h3>
        <div class="resBtnSearch"><a href="#"><span class="s16 icomoon-icon-search-3"></span></a></div>

        <!--  /search -->

    </div>
    <div class="row">
        @if (TempData.Count > 0)
        {
            if (!string.IsNullOrEmpty((string)TempData["delCont"]))
            {
                <div class="alert alert-success fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-check alert-icon"></i>
                    <strong>Success!</strong> @TempData["delCont"]
                </div>
            }

            else if (!string.IsNullOrEmpty((string)@TempData["ErrorMSG"]))
            {
                <div class="alert alert-danger fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="glyphicon glyphicon-ban-circle alert-icon"></i>
                    @TempData["ErrorMSG"]
                </div>
            }
        }



        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Subscriber List</h4>
                </div>

                <div class="panel-body">
                    @*<div class="col-lg-4" style="float: left;">
                        @using (Html.BeginForm("Subscriber", "Admin", FormMethod.Get))
                        {
                            <div class="input-group custom-search-form">
                                <input type="text" name="Search" value="@ViewBag.Search" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit" style="margin-top: 0;">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        }
                    </div>*@
                    @if (dt.Rows.Count == 0)
                    {
                        <h4 class="panel-title alert alert-info fade in" style="color: #F10404; margin-top: 10px; text-align: center;">No result found.</h4>
                    }

                    else
                    {
                        <div class="col-md-12">
                            <table id="tabletools" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Subscriber Id</th>
                                        <th>Subscriber Email</th>
                                        <th>Subscriber Date</th>
                                        <th style="width:20%">Action</th>

                                <tbody>
                                    @foreach (System.Data.DataRow dr in dt.Rows)
                                    {
                                        <tr>
                                            @if (dr["SNews_Id"].ToString() != "" && dr["SNews_Id"].ToString() != null)
                                            {
                                                <td>@dr["SNews_Id"].ToString()</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }

                                            @if (dr["SNews_Email_Id"].ToString() != "" && dr["SNews_Email_Id"].ToString() != null)
                                            {
                                                <td>@dr["SNews_Email_Id"].ToString()</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }

                                            @if (dr["SNews_EntryDate"].ToString() != "" && dr["SNews_EntryDate"].ToString() != null)
                                            {
                                                <td>@Convert.ToDateTime(dr["SNews_EntryDate"].ToString()).ToString("dd MMM yyyy")</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }
                                            <td>
                                                <a onclick="return ConfirmationDelete();" href="@Url.Action("SubscriberDelete", "Admin", new { @id = dr["SNews_Id"] })" class="btn btn-danger ml10"><i class="fa fa-trash"></i>Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            @if (PModel.EndPage > 1)
                            {
                                <ul class="pagination">
                                    @if (PModel.CurrentPage > 1)
                                    {
                                        <li>
                                            <a href="@Url.Action("Subscriber", "Admin")">First</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Subscriber", "Admin", new { @Search = ViewBag.Search, page = (PModel.CurrentPage - 1) })">Previous</a>
                                        </li>
                                    }

                                    @for (var page = PModel.StartPage; page <= PModel.EndPage; page++)
                                    {
                                        <li class="@(page == PModel.CurrentPage ? "Admin" : "")">
                                            <a href="@Url.Action("Subscriber", "Admin", new { @Search = ViewBag.Search, page = @page })">@page</a>
                                        </li>
                                    }
                                    @if (PModel.CurrentPage < PModel.TotalPages)
                                    {
                                        <li>
                                            <a href="@Url.Action("Subscriber", "Admin", new { @Search = ViewBag.Search, page = (PModel.CurrentPage + 1) })">Next</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Subscriber", "Admin", new { @Search = ViewBag.Search, page = (PModel.TotalPages) })">Last</a>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    }
                </div>

            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <!-- End .row -->
</div>

<script type="text/javascript">
    function ConfirmationDelete() {
        if (confirm("Are you sure you want to delete") == false) {
            return false;
        }
    }
</script>


